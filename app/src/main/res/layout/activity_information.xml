<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InformationActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/account_toolbar"
        android:background="@color/LightSkyBlue"
        android:layout_width="match_parent"
        app:titleTextColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Your Account"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="201dp"
            android:layout_height="186dp"
            android:layout_marginTop="85dp"
            android:src="@drawable/profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Username"
            android:fontFamily="@font/amethysta"
            android:textStyle="bold"
            android:textColor="@color/Lightblack"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/emails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="usermail@gmail.com"

            android:fontFamily="@font/amethysta"
            android:textColor="@color/Lightblack"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="@+id/user"
            app:layout_constraintStart_toStartOf="@+id/user"
            app:layout_constraintTop_toBottomOf="@+id/user" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="256dp"
            android:layout_height="288dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="47dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emails">

            <TextView
                android:id="@+id/personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_person"
                android:drawablePadding="8dp"
                android:fontFamily="@font/amethysta"
                android:padding="10dp"
                android:text="Personal Info"
                android:textColor="@color/Lightblack"
                android:textSize="23dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_location"
                android:drawablePadding="8dp"
                android:fontFamily="@font/amethysta"
                android:padding="10dp"
                android:text="Manage Address"
                android:textColor="@color/Lightblack"
                android:textSize="23dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_shopping_cart"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:text="My Cart"
                android:fontFamily="@font/amethysta"
                android:textColor="@color/Lightblack"
                android:textSize="23dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/myOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_history_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/amethysta"
                android:padding="10dp"
                android:text="My Orders"
                android:textColor="@color/Lightblack"
                android:textSize="23dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/logOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_logout"
                android:drawablePadding="8dp"
                android:padding="10dp"
                android:fontFamily="@font/amethysta"
                android:text="Log Out"
                android:textColor="@color/Lightblack"
                android:textSize="23dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <ImageView
            android:layout_width="137dp"
            android:layout_height="322dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/doctor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emails" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>